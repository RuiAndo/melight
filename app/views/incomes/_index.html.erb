<div class="income-contents">
  <div class="container bg-light p-3">
    <div class="row">

      <!-- 収入 入力エリア -->
      <div class="col-md-4">
        <div class="card">
          <div class="card-header card-header-success">
            <h3 class="card-title">収入</h3>
            <p class="card-category">毎月の収入を整理しよう</p>
          </div>
          <div class="card-body">
            <%= form_for income, html: {class: 'form js-form'} do |f| %>
            <div class="form-group pr-3">
              <%= f.label :income_amount, "月額収入：" %>
              <%= f.number_field :income_amount, class: "form-control form_textfield js-form_text-field" %>
            </div>
              <%= f.hidden_field :user_id, :value => current_user.id %>
              <%= f.submit "登録", class: "btn btn-muted form_submit js-submit" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- 収入 一覧表示エリア -->
      <div class="col-md-8">
        <div class="card">
          <div class="card-header card-header-success">
            <h3 class="card-title">収入一覧/合計</h3>
          </div>
          <div class="card-body">
            <h3 class="text-right">収入合計金額：￥<%= number_with_delimiter(@incomes.sum { |hash| hash[:income_amount]}) %></h3>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
